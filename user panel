import java.awt.*;
import java.awt.event.*;
import user.login;
import user.registration;

class panel extends Frame implements ActionListener
{
    MenuBar man;
    Menu Log;
    MenuItem log,reg;
    panel()
    {
        super("User Panel");
        this.setLayout(new FlowLayout());
        this.setSize(400,400);
        
        
        man = new MenuBar();
        
        Log = new Menu("Login/Registration");
        
        log = new MenuItem("Login");
        reg = new MenuItem("Registration");
        Log.add(log);
        Log.add(reg);
        man.add(Log);
        setVisible(true);
        setMenuBar(man);

        log.addActionListener(this);
        reg.addActionListener(this);

        
        this.addWindowListener(new WindowAdapter()
        {
            public void windowClosing(WindowEvent we)
            {
                System.exit(0);
            }
        });
        this.setVisible(true);
    }
    public void actionPerformed(ActionEvent ae)
    {
        String l = ae.getActionCommand();
        if("Login".equals(l))
        {
            new login();
        }
        else if("Registration".equals(l))
        {
            new registration();
        }
        else
        {
            System.out.println("Error Founded");
        }
    }
}

public class user_panel 
{
    public static void main(String[] args)
    {
        new panel();
    }    
}
