package user;
import java.awt.*;
import java.awt.event.*;

class registration extends Frame implements ActionListener , TextListener
{
    Label lbl_uid,lbl_pass,lbl_cpass,uid_lbl,pass_lbl;
    TextArea txt_uid,txt_pass,txt_cpass;
    Button log;
    registration()
    {
        super();
        this.setLayout(new FlowLayout());
        this.setSize(400,400);
        this.setVisible(true);

        lbl_uid = new Label("Enter User Id :- ");
        add(lbl_uid);
        txt_uid = new TextArea(1,9);
        add(txt_uid);
        txt_uid.addTextListener(this);

        lbl_pass = new Label("Enter Password :- ");
        add(lbl_pass);
        txt_pass = new TextArea(1,9);
        add(txt_pass);
        txt_pass.addTextListener(this);

        lbl_cpass = new Label("Enter Confirm Password :- ");
        add(lbl_cpass);
        txt_pass = new TextArea(1,9);
        add(txt_cpass);
        txt_cpass.addTextListener(this);

        log = new Button("Registration");
        add(log);
        log.addActionListener(this);

        this.addWindowListener(new WindowAdapter() 
        {
            public void windowClosing(WindowEvent we)
            {
                System.exit(0);
            }    
        });

    }
    String uid = "",pass = "",cpass = "";
    public void textValueChanged(TextEvent te)
    {
        uid = txt_uid.getText();
        pass = txt_pass.getText();
        cpass = txt_cpass.getText();
    }
    public void actionPerformed(ActionEvent ae)
    {
        if(uid.length() > 0 && pass.length() > 0 && cpass.length() > 0)
        {
            if(pass == cpass)
            {
                System.out.println("user Login");
            }
        }
        else
        {
            System.out.println("Enter user id / password");
        }
    }
}

